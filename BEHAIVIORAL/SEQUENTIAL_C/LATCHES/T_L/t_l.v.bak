module t(input clk,rst, input t, output reg q, output qbar);

    assign qbar=~q;

    always @(clk or rst)
             begin
             if(rst==0)
             q<=0;
             else
              if(clk == 1)
                    begin
                      if(!t)
                          q<=q;
                          else
                              q<=~q;
                       end
                   end
                
endmodule


