module t_tb();
    reg clk,rst;
    reg t;
    wire q;
    wire qbar;

t TL(clk,rst,t,q,qbar);

    initial clk=0;
    always #10 clk=~clk;

    initial
    begin
    rst=0;
    #10 rst=1;

    repeat(20)
    begin
    t=$random; #10;
    end
    end
    initial
    #100 $stop;

    initial
    $monitor("clk=%b rst=%b t=%b q=%b qbar=%b $time=%0t",clk,rst,t,q,qbar,$time);
    endmodule
